---
const locations = [
  {
    name: "FP44",
    address: "SCO 268, Sector 44, CHD",
    phone: "0172 46228844",
    whatsapp: "+91 8725055006",
    image: "/fp44.jpg",
  },
  {
    name: "FP Luxe",
    address: "SCO 164-165, Sector 9-C, CHD",
    phone: "0172 4024040",
    whatsapp: "+91 7973268966",
    image: "/fp-luxe.jpg",
  },
  {
    name: "FP Kharar",
    address: "SCO 55, Sector 125, New Sunny Enclave",
    phone: "+91 9815931884",
    wwhatsapp: "",
    image: "/fp-kharar.jpg",
  },
  {
    name: "FP PKL",
    address: "SCO 386, Sector 8, Panchkula",
    phone: "0172 40225050",
    wwhatsapp: "+91 9815962884",
    image: "/fp-pkl.jpg",
  },
];
---

<section id="locations" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12 mb-12">
      <div>
        <h2 class="text-5xl md:text-6xl font-serif text-black mb-6">
          Discover Our Convenient Nearby Locations
        </h2>
      </div>
      <div class="flex items-center">
        <p class="text-lg text-gray-700">
          Visit us at any of our conveniently located branches. Each location
          offers the same exceptional service and quality you expect from Femina
          Plus.
        </p>
      </div>
    </div>

    <!-- Location cards carousel -->
    <div class="overflow-x-auto scrollbar-hide">
      <div class="flex gap-6 pb-4">
        {
          locations.map((location) => (
            <div class="flex-shrink-0 w-80">
              <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition">
                <img
                  src={location.image}
                  alt={location.name}
                  class="w-full h-48 object-cover"
                />
                <div class="p-6">
                  <h3 class="text-2xl font-semibold text-black mb-3">
                    {location.name}
                  </h3>
                  <div class="space-y-2 mb-4">
                    <div class="flex items-start gap-2 text-gray-600">
                      <svg
                        class="w-5 h-5 mt-0.5 flex-shrink-0"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      <span>{location.address}</span>
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        />
                      </svg>
                      <span>{location.phone}</span>
                    </div>
                    <div class="flex items-center gap-2 text-gray-600">
                      <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                        />
                      </svg>
                      <span>{location.whatsapp}</span>
                    </div>
                  </div>
                  <button class="w-full bg-black text-white py-2 hover:bg-gray-800 transition">
                    Directions
                  </button>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
