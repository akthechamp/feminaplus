<style>
  .slick-slide.slick-active {
    position: relative;
  }
  .slick-slide.slick-active::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: -9px;
    transform: translateX(50%);
    width: 0;
    height: 3px;
    background: #fff;
    border-radius: 2px;
    opacity: 0;
  }

  .slick-slide.slick-active::after {
    width: 100%;
    opacity: 1;
  }

  .slick-list,
  .draggable {
    padding-block: 30px !important;
  }

  .slick-slide {
    overflow: hidden;
  }

  .slick-arrow{
    display: none !important;
  }
</style>
