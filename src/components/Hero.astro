---
import { Image } from "astro:assets";
import "../css/style.css";
import rotate_text from "../../public/Rotate_text.svg";
---

<section
  class="relative w-full pt-[283px] pb-[163px] bg-gray-900 overflow-hidden"
>
  <!-- Background image -->
  <div
    class="absolute inset-0 bg-cover bg-center"
    style="background-image: url('/hero-section-image.jpg');"
  >
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  </div>

  <!-- Content -->
  <div
    class="relative z-10 h-full flex items-center justify-end px-5 md:pr-8 lg:pr-24 lg:pt-[88px]"
  >
    <div class="text-white max-w-4xl space-y-4">
      <div class="flex gap-2 items-center justify-end">
        <p class="font-bold">Welcome femina plus</p>
        <div class="w-[33px] h-[10px] rounded-full bg-white"></div>
      </div>
      <h1
        class="text-[50px] lg:text-[114px] line md:leading-[120px] font-anticdidone text-center lg:text-end"
      >
        Expert Hair, Makeup & Nails
      </h1>
      <p
        class="text-xl font-anticdidone uppercase text-center lg:text-end md:text-2xl !mt-7"
      >
        hair | Beauty | Makeup | Hair wigs | Extensions
      </p>
    </div>
  </div>
  <div class="relative">
    <!-- WhatsApp floating button -->
    <a
      href="https://wa.me/919876543210"
      class="fixed bottom-[57px] left-[57px] z-50 shadow-xl bg-black rounded-full p-4 w-[97px] h-[97px] flex justify-center items-center hover:bg-gray-800 transition"
    >
      <svg
        class="w-8 h-8 relative text-white"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
