---
import arrow from "../../public/arrow-top-right.svg";
import close from "../../public/close.svg";
import { Image } from "astro:assets";
---

<header class="w-full absolute top-0 left-0 z-50">
  <!-- Top bar with phone number -->
  <div class="bg-black text-white py-2 px-4">
    <p class="text-sm text-center py-4">
      Free mackup for first time customer. <span class="font-extrabold">
        Use code Feminaplusfirst</span
      >
    </p>
  </div>

  <!-- Main navigation -->
  <nav class="bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <img
              src="/logo.svg"
              alt="Femina Plus"
              class="h-12 md:h-16 w-auto brightness-0 invert"
            />
          </a>
        </div>

        <!-- Navigation links -->
        <div class="hidden lg:flex items-center gap-9">
          <a
            href="#about"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            About
          </a>

          <a
            href="#locations"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Locations
          </a>

          <a
            href="#services"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Services
          </a>

          <a
            href="#blog"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Testimonials
          </a>

          <a
            href="#media"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Media
          </a>
        </div>

        <!-- Mobile Responsive -->
        <div class="hidden menu-bar fixed items-center gap-9">
          <a
            href="#about"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-black after:transition-all after:duration-300
           hover:after:w-full"
          >
            About
          </a>

          <a
            href="#locations"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Locations
          </a>

          <a
            href="#services"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Services
          </a>

          <a
            href="#blog"
            class="relative text-white hover:text-gray-300 transition
           after:content-[''] after:absolute after:left-0 after:-bottom-1
           after:w-0 after:h-[2px] after:bg-white after:transition-all after:duration-300
           hover:after:w-full"
          >
            Testimonials
          </a>

          <a
            href="#media"
            class="relative text-white hover:text-gray-300 transition-colors
         after:content-[''] after:absolute after:left-0 after:-bottom-1
         after:h-[2px] after:bg-white after:w-0 after:transition-all after:duration-300
         hover:after:w-full"
          >
            Media
          </a>
        </div>
        <!-- Book Appointment Button -->
        <button
          class="bg-black rounded-full hidden lg:flex items-center gap-3 text-[14px] text-white
          pl-6 pr-[6px] py-2 transition-all duration-300
          shadow-[0_0_0px_0_white]
          hover:shadow-[0_0_15px_3px_white]"
        >
          Book Appointment
          <Image
            class="bg-white w-fit rounded-full py-[11px] px-[21px]"
            src={arrow}
            alt={`${arrow}`}
          />

          <!-- Mobile menu button -->
          <div>
            <button class="lg:hidden menu-click text-white">
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
            <button class="hidden w-6 h-6 menu-close"
              ><Image src={close} alt={`${close}`} /></button
            >
          </div>

          <div></div>
        </button>
      </div>
    </div>
  </nav>
</header>
