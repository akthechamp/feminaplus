<header class="w-full fixed top-0 left-0 z-50">
  <!-- Top bar with phone number -->
  <div class="bg-black text-white py-2 px-4">
    <div class="max-w-7xl mx-auto flex justify-start">
      <p class="text-sm">
        For bookings call us: <a
          href="tel:+919876543210"
          class="hover:text-gray-300">+91 9876543210</a
        >
      </p>
    </div>
  </div>

  <!-- Main navigation -->
  <nav class="bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center">
            <img
              src="/logo.svg"
              alt="Femina Plus"
              class="h-12 md:h-16 w-auto brightness-0 invert"
            />
          </a>
        </div>

        <!-- Navigation links -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="#about" class="text-white hover:text-gray-300 transition"
            >About</a
          >
          <a href="#locations" class="text-white hover:text-gray-300 transition"
            >Locations</a
          >
          <a href="#services" class="text-white hover:text-gray-300 transition"
            >Services</a
          >
          <a href="#blog" class="text-white hover:text-gray-300 transition"
            >Testimonials</a>
          <a href="#blog" class="text-white hover:text-gray-300 transition"
            >Media</a>
        </div>

        <!-- Book Appointment Button -->
        <button
          class="bg-black text-white px-6 py-2 hover:bg-gray-800 transition"
        >
          Book Appointment
        </button>

        <!-- Mobile menu button -->
        <button class="md:hidden text-white">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>
