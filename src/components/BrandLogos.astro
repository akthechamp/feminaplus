---
const brands = [
	{ name: "L'Oréal" },
	{ name: 'Kérastase' },
	{ name: 'Olaplex' },
	{ name: 'Moroccanoil' },
	{ name: 'Dermalogica' },
	{ name: 'SWATI' }
];
---

<section class="py-12 bg-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
			{brands.map((brand) => (
				<div class="text-gray-400 text-xl font-light hover:text-gray-600 transition">
					{brand.name}
				</div>
			))}
		</div>
	</div>
</section>
