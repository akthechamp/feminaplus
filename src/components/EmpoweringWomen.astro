---
import { Image } from "astro:assets";
import demandingIcon from "../../public/demanding_icon.svg";
import marqueLogo from "../../public/marque-logo.svg";

import empowringLogoOne from "../../public/empowering-logo-1.svg";
import empowringLogoTwo from "../../public/empowering-logo-2.svg";
import empowringLogoThree from "../../public/empowering-logo-3.svg";
import empowringLogoFour from "../../public/empowering-logo-4.svg";
import empowringLogoFive from "../../public/empowering-logo-5.svg";
import empowringLogoSix from "../../public/empowering-logo-6.svg";

const mainServices = [
  {
    name: "Global Color",
    icon: empowringLogoOne,
    lengths: ["Short length", "Medium length", "Long length"],
  },
  {
    name: "Highlights Single Color",
    icon: empowringLogoTwo,
    lengths: ["Short length", "Medium length", "Long length"],
  },
];

const services = [
  {
    name: "Kera Smothening",
    icon: empowringLogoThree,
    lengths: ["Short length", "Medium length", "Long length"],
  },
  {
    name: "Botox",
    icon: empowringLogoFour,
    lengths: ["Short length", "Medium length", "Long length"],
  },
  {
    name: "Keratin",
    icon: empowringLogoFive,
    lengths: ["Short length", "Medium length", "Long length"],
  },
  {
    name: "Nano Plastia",
    icon: empowringLogoSix,
    lengths: ["Short length", "Medium length", "Long length"],
  },
];

const marqueText = [
  {
    name: "Your Path to Better Health",
  },
  {
    name: "Wellness for Women",
  },
  {
    name: "Shaping Women's Wellness",
  },
];
---

<section id="services" class="py-16 relative bg-white">
  <div
    class="absolute top-2 left-0 w-full pb-[252.69px] z-[9999] bg-no-repeat bg-cover"
    style="background-image: url('/featured-bg.svg');opacity:50%;"
  >
  </div>
  <div
    class="max-w-7xl mx-auto relative z-[9999] overflow-hidden px-4 sm:px-6 pb-[87px] lg:px-8"
  >
    <div class="md:grid md:grid-cols-10 gap-12 mb-[63px]">
      <div class="md:col-span-7">
        <div class="flex gap-[17px] items-center mb-[28px]">
          <div class="h-[10px] w-[33px] rounded-full bg-black"></div>
          <p>Our featured services</p>
        </div>
        <h2 class="text-5xl md:text-[54px] font-anticdidone text-black mb-6">
          Empowering Women's Health
        </h2>
      </div>
      <div class="flex items-center col-span-3">
        <p class="text-[18px] font-manrope text-black">
          Look effortlessly radiant with easy to apply products that save time
          and feel like you
        </p>
      </div>
    </div>

    <!-- Service cards -->
    <div
      class="flex space-y-7 flex-wrap lg:flex-nowrap md:space-y-0 gap-6 lg:gap-4 mb-12"
    >
      {
        mainServices.map((service) => (
          <div
            class="bg-[#F6F6F6] group hover:bg-black group-hover:bg-black group-hover:border-none
        relative border-[#D3D3D3] border w-full p-3 cursor-pointer transition-colors duration-300
        flex flex-col after:bg-black after:absolute after:h-1 after:w-0 after:-bottom-[12px] lg:after:-bottom-[15px] after:left-0 hover:after:w-full after:transition-all after:duration-300"
          >
            <div class="flex gap-[10px] w-fit transition-all duration-300 shadow-[0_0_0px_0_white] hover:shadow-[0_0_15px_3px_white]  rounded-full mb-6 p-[10px] group-hover:border-none border-[#D9D9D9] border bg-white">
              <Image src={demandingIcon} alt={`${demandingIcon}`} />
              <p class="text-[12px] font-manrope font-bold">Best Demanding</p>
            </div>
            <div class="px-[29px] flex lg:mb-9 gap-[78px] items-center min-h-[210px] justify-center flex-wrap md:flex-nowrap md:justify-center lg:justify-normal">
              <div class="relative rounded-full min-w-[135px] w-[135px] bg-white group-hover:bg-[#363636] h-[183px]">
                <Image
                  class="absolute -right-[7px] top-6"
                  src={service.icon}
                  alt={`${service.icon}`}
                />
              </div>
              <div>
                <p class="font-bold text-[32px] min-h-[50px] font-manrope mb-9 group-hover:text-white">
                  {service.name}{" "}
                </p>
                <ul class="text-[18px] font-manrope group-hover:marker:text-white group-hover:text-white pl-5 list-disc font-medium">
                  {service.lengths.map((length) => (
                    <li>{length}</li>
                  ))}
                </ul>
              </div>
            </div>
            <div class="flex absolute md:relative lg:aboslute md:justify-end lg:justify-end md:mt-4 right-5 bottom-4 md:right-1 md:bottom-1 w-full justify-end">
              <div class="border-[#D9D9D9] transition-all duration-300 shadow-[0_0_0px_0_white] hover:shadow-[0_0_15px_3px_white]  bg-white group-hover:bg-black w-fit py-[13px] px-[27px] rounded-full border">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="21px"
                  height="21px"
                  viewBox="0 0 24 24"
                  role="img"
                  class="group-hover:stroke-white"
                  aria-labelledby="arrowRightTopIconTitle"
                  stroke="#000000"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  fill="none"
                  color="#000000"
                >
                  <title id="arrowRightTopIconTitle">Arrow Right Top</title>
                  <path d="M19 13V5h-8" />
                  <path stroke-linecap="round" d="M19 5l-1 1" />
                  <path d="M18 6L5 19" />
                </svg>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="md:grid md:grid-cols-4 space-y-4 md:space-y-0 gap-4">
      {
        services.map((service) => (
          <div class="border relative group border-[#D3D3D3] hover:bg-black p-6 bg-[#F6F6F6] after:bg-black after:absolute after:h-1 after:w-0 after:-bottom-3 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer">
            <div class="w-full text-center flex justify-center">
              <div
                class="rounded-full w-[135px]  h-[183px] bg-white group-hover:bg-[#363636]
                  flex items-center justify-center"
              >
                <Image
                  src={service.icon}
                  alt={`${service.icon}`}
                  class="object-contain max-w-full max-h-full"
                />
              </div>
            </div>

            <div class="w-fit lg:w-[250px] lg:m-auto flex gap-[27px] flex-col min-h-[160px]">
              <p class="font-bold text-[32px] group-hover:text-white leading-[34px] md:text-[20px] lg:text-[20px] font-manrope md:min-h-[70px] lg:min-h-0">
                {service.name}
              </p>
              <ul class="marker:text-blackl pl-4 md:text-[12px] lg:text-[16px] group-hover:text-white group-hover:marker:text-white list-disc">
                {service.lengths.map((length) => (
                  <li>{length}</li>
                ))}
              </ul>
            </div>
            <div class="flex absolute md:relative lg:aboslute md:justify-center lg:justify-end md:mt-4 right-5 bottom-4 md:right-1 md:bottom-1 w-full justify-end">
              <div class="border-[#D9D9D9] transition-all duration-300 shadow-[0_0_0px_0_white] hover:shadow-[0_0_15px_3px_white]  bg-white group-hover:bg-black w-fit py-[13px] px-[27px] rounded-full border">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="21px"
                  height="21px"
                  viewBox="0 0 24 24"
                  role="img"
                  class="group-hover:stroke-white"
                  aria-labelledby="arrowRightTopIconTitle"
                  stroke="#000000"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  fill="none"
                  color="#000000"
                >
                  <title id="arrowRightTopIconTitle">Arrow Right Top</title>
                  <path d="M19 13V5h-8" />
                  <path stroke-linecap="round" d="M19 5l-1 1" />
                  <path d="M18 6L5 19" />
                </svg>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <marquee
    class="border border-[#D3D3D3] pt-9 pb-8 border-r-0 border-l-0"
    direction="left"
  >
    <div class="flex gap-16">
      {
        marqueText.map((marquee) => (
          <div class="flex gap-5">
            <Image src={marqueLogo} alt={`${marqueLogo}`} />
            <p class="text-[34px] ml-[5px] font-anticdidone">{marquee.name}</p>
          </div>
        ))
      }
    </div>
  </marquee>
</section>
