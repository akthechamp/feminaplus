<section class="py-16 bg-gray-50 relative">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<div>
				<h2 class="text-5xl md:text-6xl font-bold text-black mb-4">Up to 50% off</h2>
				<p class="text-2xl md:text-3xl font-serif text-gray-700 mb-8">Redefining Beauty: Hair, Makeup & Nails at Their Best.</p>
				<button class="bg-black text-white px-8 py-4 flex items-center gap-2 hover:bg-gray-800 transition">
					<span>Book Now</span>
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</button>
			</div>
			<div class="relative">
				<img src="/promo.jpg" alt="Beauty services" class="rounded-lg shadow-xl" />
				<div class="absolute top-1/2 right-1/4 w-32 h-32 border-4 border-yellow-500 rounded-full opacity-50"></div>
			</div>
		</div>
	</div>

	<!-- Floating chat icon -->
	<a href="#contact" class="fixed bottom-8 right-8 z-[9999] bg-black rounded-full p-4 shadow-lg hover:bg-gray-800 transition">
		<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
		</svg>
	</a>
</section>
